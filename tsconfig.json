{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "pretty": true,
    "moduleResolution": "node",
    "lib": ["es2017"]
  },
  "compileOnSave": false,
  "exclude": ["src/editor", "node_modules", ".tmp", "dist", "lib"]
}
